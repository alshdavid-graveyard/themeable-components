{
  "compilerOptions": {
    "target": "es6", 
    "module": "esnext",  
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceRoot": "./src",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["src/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}
